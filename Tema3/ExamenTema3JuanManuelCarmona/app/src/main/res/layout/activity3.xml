<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EN QUE PARTE TE QUIERES CENTRAR?"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>
    <GridLayout
        android:id="@+id/grupoCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2">
        <CheckBox
            android:id="@+id/barriga"
            android:text="Barriga"
            android:layout_marginRight="50dp"/>
        <CheckBox
            android:id="@+id/brazos"
            android:text="Brazos"
            android:layout_marginRight="50dp"/>
        <CheckBox
            android:id="@+id/muslos"
            android:text="Muslos"
            android:layout_marginRight="50dp"/>
        <CheckBox
            android:id="@+id/gluteos"
            android:text="Gluteos"
            android:layout_marginRight="50dp"/>

    </GridLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ESTABLECE TU OBJETIVO SEMANAL"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"/>
    <Spinner
        android:id="@+id/miSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/textoDias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="3.0"
        android:stepSize="1.0"/>

</LinearLayout>