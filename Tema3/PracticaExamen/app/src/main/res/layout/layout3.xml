<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="En que parte te quieres centrar?"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="20sp"/>
    <GridLayout
        android:id="@+id/grupoCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="2"
        android:columnCount="2">
        <CheckBox
            android:id="@+id/barriga"
            android:text="barriga"
            android:layout_marginRight="50dp"/><CheckBox
            android:id="@+id/brazo"
            android:text="brazo"
            android:layout_marginRight="50dp"/><CheckBox
            android:id="@+id/muslos"
            android:text="muslos"
            android:layout_marginRight="50dp"/><CheckBox
            android:id="@+id/gluteos"
            android:text="gluteos"
            android:layout_marginRight="50dp"/>
    </GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Establece tu objetivo semanal"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="20sp"/>
    <Spinner
        android:id="@+id/miSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/textoDias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        />
    <RatingBar
        android:id="@+id/miRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="3.0"
        android:stepSize="1.0"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        />
    <SeekBar
        android:id="@+id/miSeekBar"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:max="10"
        android:progress="0"/>
    <ProgressBar
        android:id="@+id/miProgreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyle"/>
    <ProgressBar
        android:id="@+id/miProgresoLineal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:max="100"/>


</LinearLayout>