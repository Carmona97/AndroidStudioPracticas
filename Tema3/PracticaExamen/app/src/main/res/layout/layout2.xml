<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/bienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Te damos la bienvenida"
        android:layout_centerHorizontal="true"
        android:textColor="#f975d9"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="50sp"/>
    <TextView
        android:id="@+id/ayuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Como podemos ayudarte?"
        android:layout_below="@+id/bienvenida"
        android:layout_centerHorizontal="true"
        android:textColor="#f975d9"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="20sp"/>
    <Button
        android:id="@+id/peso"
        android:layout_below="@+id/ayuda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#f7c1ea"
        android:text="Perder peso"
        android:textColor="@color/black"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="20sp"
        />
    <Button
        android:id="@+id/fuerza"
        android:layout_below="@+id/peso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#f7c1ea"
        android:text="Perder peso"
        android:textColor="@color/black"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="20sp"
        />
    <Button
        android:id="@+id/forma"
        android:layout_below="@+id/fuerza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#f7c1ea"
        android:text="Perder peso"
        android:textColor="@color/black"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="40sp"
        />
    <Button
        android:id="@+id/siguiente"
        android:layout_below="@+id/forma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#f7c1ea"
        android:text="Perder peso"
        android:textColor="@color/black"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="20sp"
        />

</RelativeLayout>